{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@my-ui/core": ["packages/core/src"],
      "@my-ui/icons": ["packages/icons/src"],
      "@my-ui/utils": ["packages/utils/src"],
      "@my-ui/theme": ["packages/theme/src"]
    }
  },
  "include": ["types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
